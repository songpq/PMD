<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundMainMenu">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways" >
            <include layout="@layout/top_bar" android:id="@+id/topBar"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/padding_in_account"
        android:paddingLeft="@dimen/padding_in_account"
        android:paddingRight="@dimen/padding_in_account"
        android:paddingBottom="@dimen/padding_in_account"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlBox"
            android:paddingTop="@dimen/padding_in_account"
            android:paddingLeft="@dimen/padding_in_account"
            android:paddingRight="@dimen/padding_in_account"
            android:background="@drawable/background_box"
            >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlTitle"
            >
            <ImageView
                android:layout_width="@dimen/icon_size_default"
                android:layout_height="@dimen/icon_size_default"
                android:id="@+id/ivSetting"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_setting_account"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textVname"
                android:layout_toLeftOf="@+id/ivSetting"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="@dimen/margin_item_profile"
            android:gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textVMainUsageOfLocker"
            android:layout_below="@+id/rlTitle"
            />
            <TextView
                android:layout_marginTop="@dimen/margin_item_profile"
                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textVPreferredLockerLocation"
                android:layout_below="@+id/textVMainUsageOfLocker"
                />
            <TextView
                android:layout_marginTop="@dimen/margin_in_account"
                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textVAverageUsageDuration"
                android:layout_below="@+id/textVPreferredLockerLocation"
                />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textVTitleAmountWallet"
            android:layout_marginTop="@dimen/margin_in_account"
            android:layout_below="@+id/textVAverageUsageDuration"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rlWallet"
            android:layout_below="@+id/textVTitleAmountWallet"

            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_in_account"
                >
                <app.android.pmdlocker.com.pmd_locker.libraries.ScaleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_alignLeft="@+id/textVAmount"
                    android:layout_alignRight="@+id/textVAmount"
                    android:src="@mipmap/ic_wallet_account"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textVAmount"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="1211"
                    android:textSize="@dimen/text_size_amount1"
                    android:minWidth="50dp"
                    android:gravity="center"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textVAverageUsageDuration"
            android:layout_alignBottom="@+id/rlWallet"
            android:layout_alignParentRight="true"
            >


        <app.android.pmdlocker.com.pmd_locker.libraries.ScaleImageView
            android:layout_width="0dp"
            android:foregroundGravity="right"
            android:layout_height="match_parent"
            android:id="@+id/ivHello"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_hello"

            />
        </RelativeLayout>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlBox"
            android:gravity="center"
            android:layout_marginTop="@dimen/padding_in_account"
            android:id="@+id/rlAction"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_ver_button"
                android:paddingTop="@dimen/padding_ver_button"
                android:paddingLeft="@dimen/padding_hor_button"
                android:paddingRight="@dimen/padding_hor_button"
                android:background="@drawable/background_button_action"
                android:id="@+id/textVTopupAction"
                android:text="@string/text_top_up"
                android:layout_marginRight="@dimen/padding_in_account"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_ver_button"
                android:paddingTop="@dimen/padding_ver_button"
                android:paddingLeft="@dimen/padding_hor_button"
                android:paddingRight="@dimen/padding_hor_button"
                android:background="@drawable/background_button_action"

                android:id="@+id/textVCustomUserSettingAction"
                android:text="@string/text_custom_setting_user"
                android:layout_toRightOf="@+id/textVTopupAction"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:layout_marginTop="@dimen/padding_in_account"

            android:layout_below="@+id/rlAction"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_ver_button"
                android:paddingTop="@dimen/padding_ver_button"
                android:paddingLeft="@dimen/padding_hor_button"
                android:paddingRight="@dimen/padding_hor_button"
                android:background="@drawable/background_button_action"
                android:id="@+id/textVUpdateProfile"
                android:text="@string/text_update_profile"
                android:layout_marginRight="@dimen/padding_in_account"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_ver_button"
                android:paddingTop="@dimen/padding_ver_button"
                android:paddingLeft="@dimen/padding_hor_button"
                android:paddingRight="@dimen/padding_hor_button"
                android:background="@drawable/background_button_action"

                android:layout_marginRight="@dimen/padding_in_account"
                android:id="@+id/textVLogoutAction"
                android:text="@string/text_logout"
                android:layout_toRightOf="@+id/textVUpdateProfile"
                />
        </RelativeLayout>


    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameAccount"
        >

    </FrameLayout>
</RelativeLayout>