<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.android.pmdlocker.com.pmd_locker.OTPActivity"
    android:background="@color/colorBGWhite"
    android:fillViewport="true"
    tools:showIn="@layout/activity_otp">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBGWhite"
    android:paddingLeft="@dimen/padding_login"
    android:paddingRight="@dimen/padding_login"
    android:paddingBottom="@dimen/padding_bottom_signup_login"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llOTP"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textVHintOTP"
            android:gravity="center"
            android:text="@string/text_message_forgot_pass"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llOTP"
        >
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/textVLabelMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_label"
            android:text="@string/text_mobile"
            />
        <EditText
            android:layout_marginLeft="@dimen/padding_login"
            android:textSize="@dimen/text_size_edittext"
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_button_menu"
            android:id="@+id/edVOTP"
            android:singleLine="true"
            android:lines="1"
            android:imeOptions="actionGo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llOTP"
        android:gravity="center"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_ver_button"
            android:paddingTop="@dimen/padding_ver_button"
            android:paddingLeft="@dimen/padding_hor_button"
            android:paddingRight="@dimen/padding_hor_button"
            android:background="@drawable/background_button_action"

            android:id="@+id/textVOTPAction"
            android:text="OK"
            />

    </LinearLayout>

</RelativeLayout>
</android.support.v4.widget.NestedScrollView>