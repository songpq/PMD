<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundMainMenu">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways" >
            <include layout="@layout/top_bar" android:id="@+id/topBar"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/appBar"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/padding_in_account"
        android:paddingLeft="@dimen/padding_in_account"
        android:paddingRight="@dimen/padding_in_account"
        android:paddingBottom="@dimen/padding_in_account"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/textVTitleTop"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:background="@drawable/background_parent_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_back_action_bar"
                        android:text="@string/text_duration"
                        android:id="@+id/textVDuration"
                        android:layout_alignTop="@+id/rlNumber"
                        android:layout_alignBottom="@+id/rlNumber"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        />
                    <RelativeLayout


                        android:layout_toRightOf="@+id/textVDuration"
                        android:background="@drawable/background_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rlNumber"

                        >
                        <!--<TextView-->
                            <!--android:layout_centerVertical="true"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:textSize="30sp"-->
                            <!--android:textStyle="bold"-->
                            <!--android:text="3"-->
                            <!--android:id="@+id/tvHour"-->
                            <!--/>-->
                        <app.android.pmdlocker.com.pmd_locker.libraries.NumberPicker
                            android:id="@+id/numberPicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            />
                        <TextView
                            android:minWidth="30dp"
                            android:layout_marginLeft="3dp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hrs"
                            android:layout_toRightOf="@+id/numberPicker"
                            android:id="@+id/labelHours"
                            android:singleLine="true"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    >
                    <app.android.pmdlocker.com.pmd_locker.libraries.ScaleImageView
                        android:layout_width="0dp"
                        android:foregroundGravity="right"
                        android:layout_height="match_parent"
                        android:id="@+id/ivHello"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_hello"

                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_ver_button"
                    android:paddingTop="@dimen/padding_ver_button"
                    android:paddingLeft="@dimen/padding_hor_button"
                    android:paddingRight="@dimen/padding_hor_button"
                    android:background="@drawable/background_button_action"
                    android:id="@+id/textVNextAction"
                    android:text="@string/text_save_settings"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameAccount"
        >

    </FrameLayout>
</RelativeLayout>