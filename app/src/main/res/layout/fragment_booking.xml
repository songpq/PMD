<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundMainMenu"
    >
    <app.android.pmdlocker.com.pmd_locker.libraries.ScaleImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/sivBg"
        android:src="@mipmap/background_main_menu"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextBlue"
        android:layout_below="@+id/sivBg"
        android:layout_marginTop="@dimen/margin_button_mainmenu"
        android:id="@+id/textVLogin"
        android:background="@drawable/background_button_menu"
        android:paddingTop="@dimen/padding_height_button"
        android:paddingBottom="@dimen/padding_height_button"
        android:gravity="center"
        />
    <TextView

        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextBlue"
        android:layout_below="@+id/textVLogin"
        android:layout_marginTop="@dimen/margin_button_mainmenu"
        android:id="@+id/textVSignUp"
        android:background="@drawable/background_button_menu"
        android:paddingTop="@dimen/padding_height_button"
        android:paddingBottom="@dimen/padding_height_button"
        android:gravity="center"
        />
</RelativeLayout>